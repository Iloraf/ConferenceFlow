# ===== SOUMISSIONS =====
submissions:
  types:
    - name: "Article complet"
      code: "article"
      description: "Communication aboutie avec résultats finalisés"
      max_pages: 6
      review_type: "peer_review"
      
    - name: "Work in Progress"
      code: "wip"
      description: "Travaux en cours avec résultats préliminaires"
      max_pages: 4
      review_type: "editorial"
      
    - name: "Poster"
      code: "poster"
      description: "Présentation sous forme d'affiche"
      format: "A0 portrait"
      review_type: "editorial"
      
  guidelines:
    language: "français"
    template_required: true
    blind_review: true
    max_authors: 8
    corresponding_author_required: true
    
  requirements:
    hal_deposit: "Obligatoire pour les articles acceptés"
    payment_condition: "Paiement effectif des frais de participation d'au moins un des auteurs avant le 15 avril 2026"
    
  # Formats de fichiers acceptés
  file_formats:
    accepted: ["pdf", "doc", "docx"]
    max_size_mb: 10
    
# ===== CONFIGURATION TECHNIQUE =====
technical:
  # Base de données
  database:
    backup_frequency: "daily"
    retention_days: 365
    
  # Emails
  email:
    smtp_server: "smtp.univ-lorraine.fr"
    from_name: "SFT 2026"
    from_email: "congres-sft2026@univ-lorraine.fr"
    max_attachments_mb: 25
    
  # Uploads
  uploads:
    max_file_size_mb: 50
    allowed_extensions: ["pdf", "doc", "docx", "png", "jpg", "jpeg"]
    virus_scan: true
    
  # Sécurité
  security:
    session_timeout_minutes: 120
    password_min_length: 8
    max_login_attempts: 5
    
# ===== INTÉGRATIONS =====
integrations:
  # HAL (Hyper Articles en Ligne)
  hal:
    enabled: true
    collection_id: "SFT2026"
    auto_deposit: false
    
  # ORCID
  orcid:
    enabled: true
    required_for_reviewers: false
    
  # DOI
  doi:
    enabled: false
    prefix: "10.1000"
    
