<!-- templates/conference/programme.html -->
{% extends 'base.html' %}

{% block title %}Programme - SFT 2026{% endblock %}

{% block extra_css %}
<style>
    .timeline-item {
        border-left: 3px solid #667eea;
        padding-left: 20px;
        margin-left: 10px;
        position: relative;
    }
    
    .timeline-item::before {
        content: '';
        position: absolute;
        left: -8px;
        top: 0;
        width: 13px;
        height: 13px;
        border-radius: 50%;
        background: #667eea;
    }
    
    .session-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .session-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    .session-break {
        background-color: #f8f9fa;
        border-left: 4px solid #6c757d;
    }
    
    .session-plenary {
        background-color: #e3f2fd;
        border-left: 4px solid #2196f3;
    }
    
    .session-parallel {
        background-color: #fff3e0;
        border-left: 4px solid #ff9800;
    }
    
    .session-social {
        background-color: #f3e5f5;
        border-left: 4px solid #9c27b0;
    }
    
    .session-poster {
        background-color: #e8f5e9;
        border-left: 4px solid #4caf50;
    }
    
    .day-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 30px;
    }
</style>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        <h1 class="mb-4"><i class="fas fa-calendar-days me-2"></i>Programme du congrès</h1>
        
        <div class="alert alert-info mb-4">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Note :</strong> Le programme est susceptible d'être modifié. Les salles seront communiquées ultérieurement.
        </div>
        
        <!-- Navigation par jour -->
        <ul class="nav nav-pills justify-content-center mb-4" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="pill" href="#day1">
                    <i class="fas fa-calendar-day me-1"></i>Lundi 1er juin
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="pill" href="#day2">
                    <i class="fas fa-calendar-day me-1"></i>Mardi 2 juin
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="pill" href="#day3">
                    <i class="fas fa-calendar-day me-1"></i>Mercredi 3 juin
                </a>
            </li>
        </ul>
        
        <!-- Contenu des jours -->
        <div class="tab-content">
            {% for day_key, day_data in programme.items() %}
            <div class="tab-pane fade {% if loop.first %}show active{% endif %}" id="{{ day_key }}">
                <div class="day-header mb-4">
                    <h2 class="mb-0">{{ day_data.date }}</h2>
                </div>
                
                <div class="timeline">
                    {% for session in day_data.sessions %}
                    <div class="timeline-item mb-4">
                        <div class="card session-card session-{{ session.type }}">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-md-2">
                                        <h5 class="mb-0">{{ session.time }}</h5>
                                    </div>
                                    <div class="col-md-10">
                                        <h4 class="mb-1">{{ session.title }}</h4>
                                        
                                        {% if session.speaker %}
                                        <p class="mb-1"><i class="fas fa-user me-2"></i><em>{{ session.speaker }}</em></p>
                                        {% endif %}
                                        
                                        {% if session.sessions %}
                                        <div class="mt-2">
                                            <strong>Sessions parallèles :</strong>
                                            <ul class="mb-0">
                                                {% for parallel in session.sessions %}
                                                <li>{{ parallel }}</li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                        {% endif %}
                                        
                                        {% if session.location %}
                                        <p class="mb-0 text-muted">
                                            <i class="fas fa-map-marker-alt me-1"></i>{{ session.location }}
                                        </p>
                                        {% endif %}
                                        
                                        <!-- Icônes selon le type -->
                                        <div class="position-absolute top-0 end-0 p-3">
                                            {% if session.type == 'break' %}
                                                <i class="fas fa-coffee fa-2x text-muted"></i>
                                            {% elif session.type == 'plenary' %}
                                                <i class="fas fa-microphone fa-2x text-primary"></i>
                                            {% elif session.type == 'parallel' %}
                                                <i class="fas fa-users fa-2x text-warning"></i>
                                            {% elif session.type == 'social' %}
                                                <i class="fas fa-glass-cheers fa-2x text-purple"></i>
                                            {% elif session.type == 'poster' %}
                                                <i class="fas fa-image fa-2x text-success"></i>
                                            {% elif session.type == 'ceremony' %}
                                                <i class="fas fa-award fa-2x text-info"></i>
                                            {% elif session.type == 'roundtable' %}
                                                <i class="fas fa-comments fa-2x text-secondary"></i>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endfor %}
        </div>
        
        <!-- Légende -->
        <div class="card mt-5">
            <div class="card-header">
                <h5 class="mb-0">Légende</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-2">
                        <span class="badge bg-primary me-2">●</span> Conférence plénière
                    </div>
                    <div class="col-md-4 mb-2">
                        <span class="badge bg-warning me-2">●</span> Sessions parallèles
                    </div>
                    <div class="col-md-4 mb-2">
                        <span class="badge bg-success me-2">●</span> Session posters
                    </div>
                    <div class="col-md-4 mb-2">
                        <span class="badge bg-secondary me-2">●</span> Pauses et repas
                    </div>
                    <div class="col-md-4 mb-2">
                        <span class="badge bg-purple me-2" style="background-color: #9c27b0;">●</span> Événements sociaux
                    </div>
                    <div class="col-md-4 mb-2">
                        <span class="badge bg-info me-2">●</span> Cérémonies
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Bouton téléchargement -->
        <div class="text-center mt-4">
            <button class="btn btn-primary btn-lg">
                <i class="fas fa-download me-2"></i>Télécharger le programme complet (PDF)
            </button>
        </div>
    </div>
</div>
{% endblock %}
